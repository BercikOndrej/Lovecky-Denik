<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:padding="2dp"
        android:src="@drawable/ic_event"
        app:tint="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/round_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/round_separator"
        android:layout_width="7dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintStart_toEndOf="@id/event_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="75dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="test"
        android:textStyle="bold"
        android:textSize="16sp"
        app:drawableLeftCompat="@drawable/rounded_background"
        app:layout_constraintBottom_toBottomOf="@+id/round_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/round_separator"
        app:layout_constraintTop_toTopOf="@id/round_separator" />

    <TextView
        android:id="@+id/event_secondary_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="testing test"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/event_name_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/event_name_tv"
        app:layout_constraintTop_toBottomOf="@id/round_separator" />

</androidx.constraintlayout.widget.ConstraintLayout>