<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoveckyDenik" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/color_primary_dark</item>
        <!-- Customize your theme here. -->
        
        <!-- Barva pozadí -->
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Barva icon navigačního menu-->
        <item name="colorOnSurface">@color/text_color</item>

        <!-- Barva textu-->
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Theme.AppCompat.StartingSplashScreen.Fullscreen" parent="Theme.AppCompat.StartingSplashScreen">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.AppCompat.StartingSplashScreen.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.LoveckyDenik.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>